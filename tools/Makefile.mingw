OPENCTMDIR = ..

all: ctmconv.exe ctmviewer.exe

ctmconv.exe: ctmconv.cpp ply.cpp ply.h $(OPENCTMDIR)/libopenctm.a
	g++ -s -O2 -W -I$(OPENCTMDIR) -o $@ -L$(OPENCTMDIR) ctmconv.cpp ply.cpp -lopenctm

ctmviewer.exe: ctmviewer.cpp mesh.cpp mesh.h $(OPENCTMDIR)/libopenctm.a
	g++ -s -O2 -W -I$(OPENCTMDIR) -o $@ -L$(OPENCTMDIR) ctmviewer.cpp mesh.cpp -lopenctm -lfreeglut -lopengl32 -lglu32
